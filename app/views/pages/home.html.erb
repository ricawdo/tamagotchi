<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1602847213180-50e43a80bef4?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80);">
  <div class="container">
    <div class="search-home">
    <h1>Have a break, Rent a pet ğŸ¦„</h1>
      <%= form_tag animals_path, method: :get, class: "form-inline md-form mr-auto mb-4" do %>
        <%= text_field_tag :adress,
          params[:adress],
          class: "form-control mr-sm-2",
          placeholder: "Address"
        %>
        <%= hidden_field_tag "latitude" %>
        <%= hidden_field_tag "longitude" %>

        <%= select_tag 'specie', options_for_select(Animal::SPECIE), class: "form-control mr-sm-2" %>
        <%= submit_tag "Search", class: "btn-flat btn-flat:hover border-0 font-weight-bold" %>
      <% end %>
    </div>
  </div>
</div>

