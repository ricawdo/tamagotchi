<div class="content">
  <h1>My Bookings</h1>
</div>




<div class="container mt-2">
  <h3 class="mb-3">Status :</h3>
  <ul class="nav nav-tabs">
      <li class="nav-item">
          <a class="nav-link active" data-bs-toggle="tab" href="#home">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-fill" viewBox="0 0 16 16">
            </svg> In progress</a>
      </li>
      <li class="nav-item">
          <a class="nav-link" data-bs-toggle="tab" href="#profile">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-bounding-box" viewBox="0 0 16 16">
            </svg> Validated</a>
      </li>
      <li class="nav-item">
          <a class="nav-link" data-bs-toggle="tab" href="#contact">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone-fill" viewBox="0 0 16 16">
            </svg> Finished</a>
      </li>
  </ul>
  <div class="tab-content">
      <div class="tab-pane active" id="home">
          <div class="row border g-0 rounded">
              <div class="col p-4">
                  <h3>Les Bookings en attente</h3>
                <% @inprogress_bookings.each do |booking|%>
                  <div class="tout d-flex justify-content-around align-items-center">
                    <div class="box-animal">
                     <strong><h1>Animal : </h1></strong>
                      <h3 class="card-title"><strong><%= booking.animal.name %></strong></h3>
                        <p class="card-text">breed : <strong><%= booking.animal.breed %></strong></p>
                        <p class="card-text">Address : <strong><%= booking.animal.adress %></strong></p>
                        <p class="card-text">Age : <strong><%= booking.animal.age %></strong> year(s)</p>
                        <p class="card-text">Price : <strong><%= booking.animal.price %></strong> euros</p>
                        <p class="card-text">Description : <strong><%= booking.animal.description %></strong></p>
                        <p class="card-text">specie : <strong><%= booking.animal.specie %></strong></p>
                    </div>
                    <div class="box-user">
                       <strong><h1>User : </h1></strong>
                      <div class="d-flex py-3">
                      <h3 class="card-title"><strong><%= booking.animal.user.first_name %></strong></h3>
                      <h3 class="card-title"><strong><%= booking.animal.user.last_name %></strong></h3>   
                      </div>
                    </div>
                    <%= link_to "valider le booking", validate_booking_booking_path(booking), class: "btn-flat", id:"for-validate"%>
                  </div>
                <% end %>
              </div>
          </div>
      </div>
      <div class="tab-pane" id="profile">
          <div class="row border g-0 rounded">
              <div class="col p-4">
                  <h3>Les Bookings valid√©s</h3>
                  <% @validated_bookings.each do |booking|%>
                  <div class="tout d-flex justify-content-around align-items-center">
                    <div class="box-animal">
                     <strong><h1>Animal : </h1></strong>
                      <h3 class="card-title"><strong><%= booking.animal.name %></strong></h3>
                        <p class="card-text">breed : <strong><%= booking.animal.breed %></strong></p>
                        <p class="card-text">Address : <strong><%= booking.animal.adress %></strong></p>
                        <p class="card-text">Age : <strong><%= booking.animal.age %></strong> year(s)</p>
                        <p class="card-text">Price : <strong><%= booking.animal.price %></strong> euros</p>
                        <p class="card-text">Description : <strong><%= booking.animal.description %></strong></p>
                        <p class="card-text">specie : <strong><%= booking.animal.specie %></strong></p>
                    </div>
                    <div class="box-user">
                       <strong><h1>User : </h1></strong>
                      <div class="d-flex py-3">
                      <h3 class="card-title"><strong><%= booking.animal.user.first_name %></strong></h3>
                      <h3 class="card-title"><strong><%= booking.animal.user.last_name %></strong></h3>   
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
          </div>
      </div>
      <div class="tab-pane" id="contact">
          <div class="row border g-0 rounded">
              <div class="col p-4">
                  <h3>Les Bookings finis</h3>
              </div>
          </div>
      </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
