<div class="container">
  <div class="card" style="width: 25rem;">
        <img src="https://cvlaval.com/sites/default/files/carousel/chat-1.jpg"  class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= @animal.name %></h5>
          <p class="card-text"><%= @animal.breed %></p>
          <p class="card-text"><%= @animal.adress %></p>
          <p class="card-text"><%= @animal.age %></p>
          <p class="card-text"><%= @animal.price %></p>
          <p class="card-text"><%= @animal.description %></p>
          <p class="card-text"><%= @animal.specie %></p>
          <%= link_to "Mettre dans le panier", "#", class: 'btn-flat'%>
        </div>
  </div>
  <i class="fas fa-undo-alt"><%= link_to "Retourner dans la liste", animals_path%></i>
</div>

