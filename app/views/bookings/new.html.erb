<div class="container d-flex">
  <div class="details">
  <h2>DÃ©tails de la commande</h2>
    <div class="container-form">
      <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
        <%= simple_form_for :search, method: "get" do |f| %>
        <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.button :submit, "Go", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  <h2>Mode de paiement :</h2>
  <button type="button" class="btn-new btn btn-outline-success">CB</button>
  <button type="button" class="btn-new btn btn-outline-success">Paypal</button>

  </div>
    <div class="card-details">

        <div style="background-image: url('<%= @animal.poster_url %>'); width: 100px; height: 100px; background-size : contain;"></div>
        <p class="name"><%= @animal.name %></p>
        <p class="infos"><u>Description :</u> <%= @animal.description %></p>
        <p class="infos">Adress : <%= @animal.adress %></p>
        <p class="infos">Specie : <%= @animal.specie %></p>

        <h2>Prix : <span id="animal-price"><%= @animal.price %></span> $</h2>
        <h2>Jour(s) : <span id="total-days">1</span></h2>
        <h2>Total : <span id="total-price"><%= @animal.price %></span> $</h2>


    </div>
</div>
